---
import Layout from '../layouts/Layout.astro';
import Guitarra from '../components/guitarra.astro';

const url = `${import.meta.env.PUBLIC_API_URL}/guitarras`;
const respuesta = await fetch(url);
const { data } = await respuesta.json();
---

<Layout
  title="Tienda"
  description="GuitarLA - Tienda de instrumentos musicales, guitarras, cursos, blog y más"
>
  <main class="contenedor">
    <h1 class="heading">Nuestra Colección</h1>

    <div class="grid">
      {
        data?.map((guitarra) => (
          <Guitarra nombre={guitarra.attributes.nombre} />
        ))
      }
    </div>
  </main>
</Layout>

